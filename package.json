{
  "name": "flipbase",
  "description": "FlipBase - A Farcaster miniapp for Play-to-Earn gaming on Base mainnet",
  "version": "1.0.0",
  "private": true,
  "author": "darlington gospel<darlingtongospel@gmail.com>",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "farcaster",
    "miniapp",
    "base",
    "typescript",
    "blockchain",
    "web3",
    "play-to-earn"
  ],
  "scripts": {
    "dev": "next dev",
    "compile": "hardhat compile",
    "build": "yarn compile && next build",
    "build:skip-compile": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --ignore-path .gitignore \"**/*.{ts,js,tsx,jsx,json,css,md}\" --write",
    "postinstall": "husky install || true",
    "compile": "hardhat compile",
    "blockchain": "hardhat node",
    "deploy": "hardhat run scripts/deploy.js --network base",
    "deploy:local": "hardhat run scripts/deploy.js",
    "seed": "hardhat run scripts/seed.js",
    "test": "hardhat test",
    "generate-assets": "node scripts/generate-assets.js"
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@headlessui/react": "^2.1.0",
    "@rainbow-me/rainbowkit": "^2.1.0",
    "@rainbow-me/rainbowkit-siwe-next-auth": "^0.3.0",
    "@reduxjs/toolkit": "^2.2.0",
    "@tanstack/react-query": "^5.51.0",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "ethers": "^6.13.0",
    "next": "^14.2.0",
    "next-auth": "^4.24.7",
    "postcss": "^8.4.39",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-icons": "^5.3.0",
    "react-identicons": "^1.2.5",
    "react-redux": "^9.1.0",
    "react-toastify": "^10.0.5",
    "sharp": "^0.33.0",
    "siwe": "^2.1.5",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.0",
    "viem": "^2.7.0",
    "wagmi": "^2.7.0",
    "@farcaster/miniapp-sdk": "^0.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.3",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@openzeppelin/contracts": "^5.0.2",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "chai": "^4.4.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^1.0.10",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.3.0",
    "solidity-coverage": "^0.8.11",
    "typechain": "^8.3.2"
  }
}
